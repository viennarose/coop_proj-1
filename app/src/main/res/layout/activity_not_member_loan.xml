<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_default"
    tools:context=".NotMemberLoan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@color/sub_default">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:background="@color/app_default"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:padding="20dp"
            android:text="APPLY FOR LOAN" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:background="@color/black_overlay"
            android:textColor="#fff"
            android:justificationMode="inter_word"
            android:textSize="20dp"
            android:padding="20dp"
            android:text="Enter loan amount and choose your guarantor. Once submitted, your guarantor and the admin will review and approve your loan." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/sub_default">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:text="Guarantor: " />

        <Spinner
            android:id="@+id/dynamic_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/sub_default">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:text="Loan Amount:" />

            <EditText
                android:id="@+id/loanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:hint="Minimum of 1000"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/sub_default">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:text="No. of Months:" />

            <EditText
                android:id="@+id/numberMonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:hint="1-12"
                android:inputType="number" />

        </LinearLayout>
        <Button
            android:id="@+id/submitB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_default"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:text="SUBMIT" />
        <Button
            android:id="@+id/cancelB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e54949"
            android:textColor="#ffffff"
            android:text="CANCEL" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>