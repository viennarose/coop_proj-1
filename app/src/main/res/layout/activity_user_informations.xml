<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009d5b"
    tools:context=".admin.UserInformations">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/title_color"
            android:shadowColor="#fff"
            android:shadowDx="0.0"

            android:shadowDy="0.0"
            android:shadowRadius="80"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="USER INFORMATIONS" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:hint="Full Name"
            android:enabled="false"
            android:digits=". qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_add_home_24"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:hint="Address"
            android:enabled="false"
            android:digits=",.- 0123456789qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_attribution_24"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:hint="Age"
            android:padding="15dp"
            android:enabled="false"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_add_ic_call_24"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:hint="Phone Number (09xxxxxxxxx)"
            android:maxLength="11"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:inputType="number|phone" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_email_24"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:hint="Email"
            android:padding="15dp"
            android:enabled="false"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:ems="10"
            android:background="@drawable/edittext_border"
            android:hint="Username"
            android:digits="_.-0123456789qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:padding="15dp"
            android:maxLength="15"
            android:enabled="false"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/accStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_default"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:text="" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="GO BACK" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>